# vim: foldmethod=marker

# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).

# Global Variables  #########################################################{{{

set $mod Mod4
set $power_mod Ctrl+Mod1
set $launch_mod Mod4+Mod1

set $lock_command "i3lock --nofork --show-failed-attempts --show-keyboard-layout --color 24273a 󰇘/.config/i3/scripts"

focus_follows_mouse no


# }}}
# Workspaces ################################################################{{{

set $ws1 "1: terminal"
set $ws2 "2: browser"
set $ws3 "3: communication"
set $ws4 "4: focus"
set $ws5 "5: aside"
set $ws6 "6: music"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10: notes"

set $wsBitwarden "bitwarden"

# }}}
# Monitors ##################################################################{{{

set $monitor1 HDMI-1 DP-1 eDP-1

set $monitor2 DP-1 eDP-1
set $monitor3 eDP-1

workspace $ws1 output $monitor1
workspace $ws2 output $monitor1
workspace $ws3 output $monitor1
workspace $ws4 output $monitor1
workspace $ws5 output $monitor1
workspace $ws6 output $monitor1
workspace $ws10 output $monitor1

workspace $wsBitwarden output $monitor2

# }}}
# Windows ###################################################################{{{

assign [class="^kitty$"] $ws1
assign [class="^firefox$"] $ws2
assign [class="^zen$"] $ws2
assign [class="^thunderbird$"] $ws3
assign [class="^Signal$"] $ws3
assign [class="^firefox-music$"] $ws6
assign [class="^obsidian$"] $ws10

assign [class="^bitwarden$"] $wsBitwarden

for_window [class="-kittyfloat"] floating enable, resize set 95 ppt 90 ppt, move position center
for_window [class="^cinnamon-settings"] floating enable, resize set 731 px 670 px, move position center
for_window [class="^Blueman-manager"] floating enable, resize set 602 px 500 px, move position center
for_window [class="^Pavucontrol"] floating enable, resize set 602 px 1000 px, move position center
for_window [class="^com.github.th_ch.youtube_music$"] floating enable, resize set 500 px 700 px, move position center
for_window [class="^zen$" title=".*Private Browsing.*"] move to workspace number 6

# }}}
# Key-bindings ##############################################################{{{

set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# workspaces
bindsym $mod+1 workspace number $ws1; exec --no-startup-id jumpapp -w kitty
bindsym $mod+2 workspace number $ws2; exec --no-startup-id jumpapp -w zen
bindsym $mod+3 workspace number $ws3; exec --no-startup-id jumpapp -R thunderbird; exec --no-startup-id jumpapp -R signal-desktop --password-store="gnome-libsecret"
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $Ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10; exec --no-startup-id jumpapp -w obsidian

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left  focus left
bindsym $mod+Right focus right
bindsym $mod+Up    focus up
bindsym $mod+Down  focus down

# move
set $move_step_size 200 px

bindsym $mod+Shift+h move left $move_step_size
bindsym $mod+Shift+j move down $move_step_size
bindsym $mod+Shift+k move up $move_step_size
bindsym $mod+Shift+l move right $move_step_size

bindsym $mod+Shift+Left  move left $move_step_size
bindsym $mod+Shift+Right move right $move_step_size
bindsym $mod+Shift+Up    move up $move_step_size
bindsym $mod+Shift+Down  move down $move_step_size

# resize
set $resize_step_size 100 px or 10 ppt

bindsym $mod+Home exec "\
  i3-msg resize shrink right $resize_step_size ||\
  i3-msg resize shrink down $resize_step_size ||\
  i3-msg resize grow left $resize_step_size ||\
  i3-msg resize grow up $resize_step_size\
"
bindsym $mod+End exec "\
  i3-msg resize grow right $resize_step_size ||\
  i3-msg resize grow down $resize_step_size ||\
  i3-msg resize shrink left $resize_step_size ||\
  i3-msg resize shrink up $resize_step_size\
"

bindsym Shift+$mod+Home exec "\
  i3-msg resize shrink down $resize_step_size ||\
  i3-msg resize shrink right $resize_step_size ||\
  i3-msg resize grow up $resize_step_size ||\
  i3-msg resize grow left $resize_step_size\
"
bindsym Shift+$mod+End exec "\
  i3-msg resize grow down $resize_step_size ||\
  i3-msg resize grow right $resize_step_size ||\
  i3-msg resize shrink up $resize_step_size ||\
  i3-msg resize shrink left $resize_step_size\
"

# layout toggle
bindsym $mod+z layout toggle tabbed split

# floating
bindsym $mod+Shift+t floating toggle
bindsym $mod+t focus mode_toggle
bindsym $mod+Button1 move
bindsym $mod+Button3 resize

# close
bindsym $mod+q kill
bindsym $mod+x kill
bindsym $power_mod+x exec xkill

# minimize/maximize
bindsym $mod+d move scratchpad
bindsym $mod+f fullscreen toggle

# minimize/maximize
bindsym $mod+v split vertical
bindsym Shift+$mod+v split horizontal

# move workspaces 
bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output right

bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Down move workspace to output down
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Right move workspace to output right


# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# rofi menus
bindsym $mod+space exec "rofi -modi combi,drun,window -show drun"
bindsym $mod+Tab exec "rofi -modi combi,drun,window -show window"
# bindsym $mod+Shift+space exec "rofi -modi combi,drun,window -show combi"
# bindsym $mod+r exec "rofi -show run -modi run"
bindsym $power_mod+Home exec "~/.config/rofi/scripts/rofi-keyboard-menu"
bindsym $power_mod+End exec "rofi -show powermenu -modi powermenu:~/.config/rofi/scripts/rofi-power-menu"
bindsym $power_mod+b exec "~/.config/rofi/scripts/rofi-bluetooth"

bindsym $power_mod+l exec $lock_command

# music control
bindsym $power_mod+m exec jumpapp -Rc "com.github.th_ch.youtube_music" "youtube-music"





# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Use pactl to for media control
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/pactl_volume.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/pactl_volume.sh down
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym $mod+XF86AudioRaiseVolume exec ~/.config/i3/scripts/play_test_sound.sh


bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $power_mod+XF86AudioRaiseVolume exec playerctl next
bindsym $power_mod+XF86AudioLowerVolume exec playerctl previous
bindsym $power_mod+XF86AudioMute exec playerctl play-pause

bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/brightness_controller.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/brightness_controller.sh down

bindsym $mod+w exec --no-startup-id ~/.config/rofi/scripts/rofi-mpv-control

# notifications mode {{{
set $notifications_mode "notifications -- [dx]: dismiss [DX]: dismiss all [h]: history-pop"
mode $notifications_mode {

    bindsym d exec dunstctl close
    bindsym x exec dunstctl close

    bindsym Shift+d exec dunstctl close-all; mode "default"
    bindsym Shift+x exec dunstctl close-all; mode "default"

    bindsym h exec dunstctl history-pop

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+n mode $notifications_mode
# }}}

bindsym $launch_mod+1 exec jumpapp -R -c Bitwarden exec /usr/bin/flatpak run --branch=stable --arch=x86_64 com.bitwarden.desktop

bindsym $mod+Ctrl+r exec i3-input -F 'rename workspace to "%s"' -P 'Workspace Name: ' -f 'pango:IosevkaTerm NF SemiBold 16'
bindsym $mod+Ctrl+c exec i3-input -F 'workspace "%s"' -P 'Create Named Workspace:  ' -f 'pango:IosevkaTerm NF SemiBold 16'
bindsym $mod+Ctrl+m exec i3-input -F 'move container to workspace "%s"' -P 'Move to Workspace:  ' -f 'pango:IosevkaTerm NF SemiBold 16'

bindsym $mod+p exec flameshot gui

# }}}
# Styling ###################################################################{{{

# Colors from catppuccin mocha {{{
set $rosewater #f5e0dc
set $flamingo  #f2cdcd
set $pink      #f5c2e7
set $mauve     #cba6f7
set $red       #f38ba8
set $maroon    #eba0ac
set $peach     #fab387
set $yellow    #f9e2af
set $green     #a6e3a1
set $teal      #94e2d5
set $sky       #89dceb
set $sapphire  #74c7ec
set $blue      #89b4fa
set $lavender  #b4befe
set $text      #cdd6f4
set $subtext1  #bac2de
set $subtext0  #a6adc8
set $overlay2  #9399b2
set $overlay1  #7f849c
set $overlay0  #6c7086
set $surface2  #585b70
set $surface1  #45475a
set $surface0  #313244
set $base      #1e1e2e
set $mantle    #181825
set $crust     #11111b
# }}}

# Font for window titles.
font pango:IosevkaTerm NF SemiBold 10

# target                 title     bg        text     indicator  border
client.focused           $mantle   $blue     $mantle  $rosewater $blue
client.focused_inactive  $overlay0 $subtext1 $text    $rosewater $subtext1
client.unfocused         $overlay0 $base     $text    $rosewater $overlay0
client.urgent            $peach    $base     $peach   $overlay0  $peach
client.placeholder       $overlay0 $base     $text    $overlay0  $overlay0
client.background        $base

for_window [class="^.*"] border pixel 4
hide_edge_borders smart_no_gaps

gaps inner 10px
gaps outer 0px

# Enabling “Smart Gaps” means no gaps will be shown when there is
# precisely one window or split container on the workspace.
#
# inverse_outer only enables outer gaps when there is exactly one
# window or split container on the workspace.
smart_gaps on


# }}}
# Startup ###################################################################{{{

# Use picom compositor
exec --no-startup-id picom

# Ensure dunst is running
exec --no-startup-id ~/.config/i3/scripts/ensure_dunst_is_running.sh

# Keyboard layout settings
exec --no-startup-id setxkbmap -layout us -variant dvorak -option caps:escape

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# Config lock screen
exec --no-startup-id xss-lock --transfer-sleep-lock -- $lock_command

# Warn me when battery is low
exec --no-startup-id ~/.config/i3/scripts/i3-battery-popup.sh -n

# Tell me what song is playing
exec --no-startup-id ~/.config/i3/scripts/media_notifier.sh

# Activate monitors and then add a status bar and wallpaper to them
exec --no-startup-id ~/.config/i3/scripts/detect_monitor_change.sh
exec_always --no-startup-id ~/.config/i3/scripts/redecorate_monitors.sh

# Configure the touchpad
exec_always --no-startup-id ~/.config/i3/scripts/configure_touchpad_behavior.sh

# }}}
